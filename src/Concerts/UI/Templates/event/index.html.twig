{# Template : event/index.html.twig #}

{% extends 'twig_heritage/template.html.twig' %}

{% block title %}Liste des concerts{% endblock %}

{% block body %}
    <style>
        .duplicate {
            color: red;  
            border-color: red;
        }
    </style>

    {# Formulaire de sélection du jour #}
    <form method="get" action="{{ path('event_index') }}">
        <select name="concert_day">
            <option value="">Sélectionnez un jour</option>
            {% for day in availableDays %}
                <option value="{{ day }}" {% if day == selectedDay %}selected{% endif %}>{{ day }}</option>
            {% else %}
                <option disabled>Aucun jour disponible</option>
            {% endfor %}
        </select>
        <button type="submit">Filtrer</button>
    </form>

    {# Affichage des concerts #}
    <div class="row">
        {% for concert in concerts %}
            <div class="card" style="width: 18rem;">
                <div class="card-body">                    
                    <img src="{{ asset('uploads/' ~ concert.imageId) }}" style="width:12rem;">
                    {% if concert.is_duplicate %}<h3 class="duplicate">Evènements simultanés!</h3>{% endif %}
                    <h5 class="card-title">{{ concert.name }}</h5>
                    <h6 class="card-subtitle mb-2 text-muted">{{ concert.location }}</h6>
                    <h6 class="card-subtitle mb-2 text-muted">{{ concert.day }}</h6>
                    <p class="card-text">Horaire : {{ concert.schedule }}</p>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}