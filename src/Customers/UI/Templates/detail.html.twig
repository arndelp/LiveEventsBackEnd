{% extends 'twig_heritage/template.html.twig'  %}

{% block title %}
    {{ customer.id }}
{% endblock %}

{% block body %}
    <div class="card" style="width: 100%;">
        <div class="card-body">               
            
            <h2 class="card-title"> {{ customer.lastname }}</h2>
            <h2 class="card-title"> {{ customer.firstname }}</h2> 
            <p class="card-subtitle mb-2 text-muted">{{ customer.email }} </p>
            <p class="card-text">TÃ©l: {{ customer.phone }}</p>
            <p class="card-text">Musique: {{ customer.style }}</p>
            <p class="card-text">Adresse postale: </p>
            <small class="card-text">{{ customer.streetnumber }}, {{ customer.street }}</small><br>            
            <small class="card-text">{{ customer.postalcode }}</small><br>
            <small class="card-text">{{ customer.city }}</small><br>
            <small class="card-text"  >{{ customer.country }}</small>
          

            <div class='col' style="margin-top:2em">
                <form action="{{ path('customer.delete', {id: customer.id}) }}">
                    <button type="submit"  class="btn btn-danger btn-sm" class="card-link">Supprimer</button>
                </form>   
            </div>       

                 {# Lien vers la liste des concerts #}
            <a href="{{ path('customer.list.alls') }}" class="card-link" id="retour" >Retour</a>
               
        </div>
    </div>
{% endblock %}