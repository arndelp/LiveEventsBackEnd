{% extends 'twig_heritage/template.html.twig'  %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <h1 class="h3 mb-3 font-weight-normal">S'enregistrer</h1>

    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm) }}
        {{  form_row(registrationForm.lastname, {
            label: 'Nom'
        }) }}
        {{  form_row(registrationForm.firstname, {
            label: 'Prénom'
        }) }}
        {{ form_row(registrationForm.email, {
            label: 'E-mail'
        }) }}
        {{ form_row(registrationForm.password, {
            label: 'Mot de passe'
        }) }}
        
        {# {{ form_row(registrationForm.recaptcha) }}
        {{ form_errors(registrationForm.recaptcha) }}  #}

   

        <div class="row d-none d-lg-block mt-4">
            <button class="btn btn-lg  btn-primary  col-2 offset-1" type="submit">
               S'enregistrer
            </button>
            <div class="btn  btn-link col-3 offset-2">
                <a href="{{ path('app_login') }}">Déjà enregistré</a>
            </div>
        </div>
         <div class="row d-block d-lg-none">
            <button class="btn  btn-primary " type="submit">
                S'enregistrer
            </button>
            <div class="row d-block d-lg-none mt-4">
                <a href="{{ path('app_login') }}">Déjà enregistré</a>
            </div>
        </div>

    {{ form_end(registrationForm) }}
{% endblock %}
