{% extends 'twig_heritage/template.html.twig' %}

{% block title %}Liste des POI Bar/Restauration{% endblock %}

{% block body %}    
{# affichage de toutes les personnes de la base de données #}
<h1>Bar/Restauration</h1>
    <div class="row">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">Nom</th>                            
                    <th scope="col">Latitude (°)</th>
                    <th scope="col">Longitude (°)</th>
                    <th scope="col">Icone (png/jpg)</th>
                    <th scope="col">Largeur (30)</th>
                    <th scope="col">Hauteur (30)</th>
                    <th scope="col">Informations</th>
                </tr>
            </thead>

            {% for bar in bars %}

            <tbody>
                    <tr>  
                        <th scope="row">{{ bar.name }}</th>                 
                        <td>{{ bar.position.lat }}</td>
                        <td>{{ bar.position.lng }}</td>
                        <td>
                            <div>
                                <img src= "{{ asset('uploads/markers/' ~ bar.iconId) }}" height= 25em></td>
                            </div>
                        <td>{{ bar.width }}</td>
                        <td>{{ bar.height }}</td> 
                        <td>{{ bar.info }}</td> 
                        <td>
                            <div class='col'>
                                <form action="{{ path('bar.edit', {id: bar.id}) }}">
                                    <button type="submit"  class="btn btn-secondary btn-sm" class="card-link">Modifier</button>
                                </form>   
                            </div>    
                        </td>   
                        <td>
                            <div class='col'>
                                <form action="{{ path('bar.delete', {id: bar.id}) }}">
                                    <button type="submit"  class="btn btn-danger btn-sm" class="card-link">Supprimer</button>
                                </form>   
                            </div>    
                        </td>                                              
                    </tr>
            </tbody>
            
            {% endfor %}

        </table>

    </div>
{% endblock %}

